<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/main2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/camera"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/instagram"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/message"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#faf9fa">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="스토리"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_toLeftOf="@+id/tv_allShow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow"/>

            <TextView
                android:id="@+id/tv_allShow"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="모두보기"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp">

                <RelativeLayout
                    android:layout_width="54dp"
                    android:layout_height="54dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pic1"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="#5395e9"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pikachu"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/insta"/>o

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/pic2"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ssisisi"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/insta"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/pic3"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pairi"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/insta"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/pic4"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bugibugi"
                    android:textSize="8sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e2e3e3"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pikachu"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/image_profile"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/points"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/pikapika"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <ImageView
                    android:id="@+id/image_profile2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pikachu"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/image_profile2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/points"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/pic3"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">


                <ImageView
                    android:id="@+id/image_profile3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/pic2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pikachu"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/image_profile3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/points"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/pic2"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>