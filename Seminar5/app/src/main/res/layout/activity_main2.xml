<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    tools:context=".Main2Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sidemenubtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="14dp"/>



    <ImageView
        android:id="@+id/musicImage"
        android:layout_width="290dp"
        android:layout_height="280dp"
        android:src="@drawable/albumpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />


    <TextView
        android:id="@+id/music_title"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/musicImage"
        android:layout_marginTop="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주지마"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/music_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"/>


        <SeekBar
            android:layout_centerVertical="true"
            android:id="@+id/music_seekbar"
            android:progress="20"
            android:max="1000"
            android:progressDrawable="@drawable/seekbar_background"
            android:layout_width="240dp"
            android:layout_centerHorizontal="true"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_height="18dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/music_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로꼬, 화사"
        android:textColor="#777777"
        android:textSize="13dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/music_title"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/music_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pausebtn"
            />

        <ImageView
            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/premusicbtn"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nextmiscbtn"
            android:layout_marginRight="64dp"/>

    </RelativeLayout>



</RelativeLayout>