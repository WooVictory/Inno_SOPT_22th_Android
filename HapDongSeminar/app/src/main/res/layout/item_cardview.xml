<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:background="@drawable/textview_background"
    app:cardElevation="5dp">


    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/cardView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"/>


        <TextView
            android:id="@+id/cardView_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:50AM"/>


        <ImageView
            android:id="@+id/cardView_image"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardView_id"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pizza"
            android:scaleType="fitXY"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/cardView_content"
            android:layout_below="@+id/cardView_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectet ur adipisicing elit, sed do eiusmod tem por incididunt ut labore et dolore mag na a"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>